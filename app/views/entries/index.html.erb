<% @entries.each do |item| %>
  <%= render 'delete_confirmation', item: item %>
<% end %>

<div class='container-fluid plan-items'>
  <% @entries.each do |entry| %>
    <div class='row'>
      <div class='col-xs-8 col-md-4'>
        <span class='plan-item-name'><%= link_to entry.owner.name, entry %></span>
      </div>
      <div class='col-xs-4 hidden-md-up text-xs-right toolbar'>
        <%= render 'xs_toolbar', entry: entry %>
      </div>
      <div class='col-xs-12 col-md-5'>
        <span class='plan-item-description'>
          <% entry.description.split("\n").each do |line| %>
            <%= line %><br>
          <% end %>
        </span>
      </div>
      <div class='col-md-3 hidden-sm-down text-xs-right toolbar'>
        <%= render 'md_toolbar', entry: entry %>
      </div>
      <div class='col-xs-12'>
        <span class='plan-item-duration'><%= format_duration(entry) %></span>
      </div>
    </div>
  <% end %>
</div>
